.LinkTitle {
  &__link {
    text-decoration: none;
    display: inline-block;
    cursor: pointer;

    &:hover {
      transform: translateX(5px);
    }

    &:hover [class^="wgf-icon-"] {
      transform: scale(0.6) translateX(-0.1em);
    }
  }

  [class^="wgf-icon-"] {
    display: inline-block;
    font-size: 1.3em;
    font-weight: bold;
    line-height: 0em
    position: relative;
    top: .23em
  }

  .LinkTitle__link,
  [class^="wgf-icon-"] {
    transition: transform 200ms;
  }
}
